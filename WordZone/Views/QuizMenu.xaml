<Page x:Class="WordZone.Views.QuizMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WordZone.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuizMenu">

    <StackPanel>
        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Margin="0,0,0,10">
            <TextBlock Text="Spróbuj sił w Quizie" Style="{StaticResource HeaderTB}"/>
        </Border>
        <Border Grid.Column="1" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Padding="20" Width="600" Height="170" Margin="0,30,0,0">
            <StackPanel>
                <TextBlock Text="Z jakiego zbioru chcesz quiz?" Style="{StaticResource SemiBoldTB}"/>
                <ComboBox ItemsSource="{Binding TableNamesList}" SelectedItem="{Binding TableName, Mode=TwoWay}" Width="300"/>
                <Button Content="Startujemy Quiz!!" Width="300" Height="30" Command="{Binding StartQuizCommand}" Margin="0, 20, 0, 20" />
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
