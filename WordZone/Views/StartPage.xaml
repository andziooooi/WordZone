<Page x:Class="WordZone.Views.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WordZone.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Style="{StaticResource HeaderBorder}">
            <TextBlock Text="Start" Style="{StaticResource HeaderTB}"/>
        </Border>
        <Border Style="{StaticResource ContentBorder}" Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Witaj w WordZone!" Style="{StaticResource HeaderStartTB}"></TextBlock>
                <TextBlock Text="WordZone ma na celu pomóc Ci w nauce języka angielskiego!" Style="{StaticResource SemiBoldTB}"/>
                <TextBlock Text="Aplikacja w przyszłości będzie wciąż rozwijana!" Style="{StaticResource SemiBoldTB}"/>
                <TextBlock Text="Powodzenia!" Style="{StaticResource HeaderStartTB}"></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Page>
